auto eno1
iface eno1 inet static
	address 10.50.2.10/24
	gateway 10.50.2.1

auto vmbr0
iface vmbr0 inet static
	address 10.16.1.1/24
	bridge-ports none
	bridge-stp off
	bridge-fd 0

	post-up   echo 1 > /proc/sys/net/ipv4/ip_forward
	post-up   iptables -t nat -A POSTROUTING -s '10.16.1.0/24' -o eno1 -j MASQUERADE
	post-down iptables -t nat -D POSTROUTING -s '10.16.1.0/24' -o eno1 -j MASQUERADE
	post-up   iptables -t nat -A PREROUTING -i eno1 -p tcp -m tcp --dport 1000 -j DNAT --to-destination 10.16.1.10:443
	post-down iptables -t nat -D PREROUTING -i eno1 -p tcp -m tcp --dport 1000 -j DNAT --to-destination 10.16.1.10:443
	post-up   iptables -t nat -A PREROUTING -i eno1 -p tcp -m tcp --dport 12345 -j DNAT --to-destination 10.16.1.10:12345
	post-down iptables -t nat -D PREROUTING -i eno1 -p tcp -m tcp --dport 12345 -j DNAT --to-destination 10.16.1.10:12345
	post-up   iptables -t raw -I PREROUTING -i fwbr+ -j CT --zone 1
	post-down iptables -t raw -D PREROUTING -i fwbr+ -j CT --zone 1

